{
  "name": "sprova-server",
  "version": "0.0.1",
  "description": "Sprova API",
  "author": "Aldi Alimucaj",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "debug": "DEBUG=koa* nodemon src/server.js",
    "test": "npm run unit-tests && npm run api-tests",
    "api-tests": "NODE_ENV=test ./node_modules/mocha/bin/_mocha --timeout 999999 --colors --exit tests/api",
    "unit-tests": "NODE_ENV=test ./node_modules/mocha/bin/_mocha --timeout 999999 --colors --exit tests/unit",
    "test-with-coverage": "./node_modules/.bin/nyc --reporter=html npm test",
    "lint": "eslint src/",
    "lint-watch": "esw -w src/ test/",
    "docs": "apidoc -i src/api -o docs/",
    "cover": "cross-env NODE_ENV=test nyc npm test"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "bunyan": "^2.0.2",
    "fs-extra": "^7.0.0",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.5.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.1",
    "koa-body": "^4.0.6",
    "koa-bunyan": "^1.0.0",
    "koa-convert": "^1.2.0",
    "koa-graphql": "^0.8.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^3.3.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "koa-session": "^5.10.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.10",
    "mongodb": "^3.1.10"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-watch": "^4.0.1",
    "mocha": "^5.2.0",
    "mongodb-memory-server": "^2.9.1",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0"
  }
}
